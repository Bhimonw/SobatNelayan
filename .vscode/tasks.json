{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Backend: start",
			"type": "shell",
			"command": "node",
			"args": [
				"server.js"
			],
			"options": {
				"cwd": "${workspaceFolder}/Backend"
			},
			"isBackground": true,
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Frontend: dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/Frontend"
			},
			"isBackground": true,
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Frontend: dev 5174",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev",
				"--",
				"--port",
				"5174"
			],
			"options": {
				"cwd": "${workspaceFolder}/Frontend"
			},
			"isBackground": true,
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Dev: start all",
			"dependsOn": [
				"Backend: start",
				"Frontend: dev"
			],
			"dependsOrder": "parallel"
		}
	]
}